    'Antarctica'=>['Spheniscidae'],
];

$result = [];
foreach ($animals as $countinent) {
    $result = array_merge($result, array_filter($countinent, function ($item){ return count(explode(' ', $item)) === 2; }) );
}

echo "<pre>";
print_r($result);
echo "</pre>";

$firstanimals=[];
$secondanimals=[];

foreach ($result as $value) {
	$put = explode(' ', $value);
	$firstanimals = $put[0];
	$secondanimals = $put[1];
	/*shuffle($secondanimals);*/
}
echo "<pre>";
print_r($put);
echo "</pre>";

echo "<pre>";
